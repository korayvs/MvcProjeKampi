<!DOCTYPE html>
<html>
<head>
    <title>Yetenek Kartım</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Skills Profile Widget template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="~/Themas/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="~/Themas/web/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="~/Themas/web/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <!--//ResponsiveTabs-->
</head>
<body>
    <!-- main -->
    <div class="main">
        <h1>Yetenek Kartım</h1>
        <div class="main-info w3l">
            <div class="main-row">
                <!-- main-row-one -->
                @foreach (var item in Model)
                {
                    <div class="profile-grid logo wthree">
                        <img src="@item.UserImage" alt="" style="width:200px; height:200px">
                        <h2>@item.UserNameSurname </h2>
                        <p>@item.Title</p>

                    </div>
                    <h3 class="title">Yetenekler</h3>
                    <div class="col-md-6 skills-right bar_group">

                        <div class='bar_group__bar thin' label='@item.SkillName1 &nbsp;&nbsp; @item.SkillValue1%' value='@item.SkillValue1'></div>
                        <div class='bar_group__bar thin' label='@item.SkillName2 &nbsp;&nbsp; @item.SkillValue2%' value='@item.SkillValue2'></div>
                        <div class='bar_group__bar thin' label='@item.SkillName3 &nbsp;&nbsp; @item.SkillValue3%' value='@item.SkillValue3'></div>
                        <div class='bar_group__bar thin' label='@item.SkillName4 &nbsp;&nbsp; @item.SkillValue4%' value='@item.SkillValue4'></div>
                    </div>

                    <div>
                        <a href="/AdminCategory/Index/" class="b_label">Geri Dön</a>
                    </div>
                }

                <!--bar-js-->
                <script src="~/Themas/web/js/bars.js"></script>
                @*<div class="social-icons agileits">
                    <ul>
                        <li><a href="#"></a></li>
                        <li><a href="#" class="fb"></a></li>
                        <li><a href="#" class="be"></a></li>
                        <li><a href="#" class="gg"></a></li>
                    </ul>
                </div>*@
                <div class="clear"> </div>
            </div>
        </div>
        <!-- copyright -->

        <div class="copyright">
            <p> © 2025 Yetenek Kartı . Tüm Hakları Saklıdır | Tarafından <a href="https://www.linkedin.com/in/" target="_blank">Koray Vatansever</a></p>
        </div>
        <!-- //copyright -->
    </div>
    <!-- main -->
</body>
</html>