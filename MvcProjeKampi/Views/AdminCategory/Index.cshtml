@model List<EntityLayer.Concrete.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/PagedList.css" rel="stylesheet" />

<br />
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-info">Güncelle</a></td>
            <td><a href="/AdminCategory/HeadingByCategory/@item.CategoryID" class="btn btn-default" style="background-color:coral; color:white">Başlıklar</a></td>
        </tr>
    }

</table>
<a href="/AdminCategory/AddCategory" class="btn btn-primary">Yeni Kategori</a>