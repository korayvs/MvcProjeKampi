@model List<EntityLayer.Concrete.Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string color = "";
    string style = "";
    string status = "";
    string stcolor = "";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 15%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            switch (item.Category.CategoryName)
                            {
                                case "Tiyatro":
                                    color = "badge badge-warning";
                                    style = "";
                                    break;

                                case "Spor":
                                    color = "badge badge-success";
                                    style = "background-color:mediumslateblue";
                                    break;

                                case "Yazılım":
                                    color = "badge badge-info";
                                    style = "";
                                    break;

                                case "Seyahat":
                                    color = "badge badge-secondary";
                                    style = "";
                                    break;

                                case "Film":
                                    color = "badge badge-danger";
                                    style = "background-color:orchid";
                                    break;

                                case "Kitap":
                                    color = "badge badge-dark";
                                    style = "background-color:darksalmon";
                                    break;

                                case "Dizi":
                                    color = "badge badge-dark";
                                    style = "";
                                    break;

                                default:
                                    color = "";
                                    style = "";
                                    break;
                            }

                            //if (item.Category.CategoryName == "Tiyatro")
                            //{
                            //    color = "badge badge-warning";
                            //}

                            //if (item.Category.CategoryName == "Spor")
                            //{
                            //    color = "badge badge-success";
                            //}

                            //if (item.Category.CategoryName == "Yazılım")
                            //{
                            //    color = "badge badge-info";
                            //}

                            //if (item.Category.CategoryName == "Seyahat")
                            //{
                            //    color = "badge badge-secondary";
                            //}

                            //if (item.Category.CategoryName == "Film")
                            //{
                            //    color = "badge badge-danger";
                            //    style = "background-color:orchid";
                            //}

                            //if (item.Category.CategoryName == "Kitap")
                            //{
                            //    color = "badge badge-warning";
                            //    style = "background-color:darksalmon";
                            //}

                            //if (item.Category.CategoryName == "Dizi")
                            //{
                            //    color = "badge badge-dark";
                            //    style = "";
                            //}

                            <tr>
                                <td>
                                    @item.HeadingID
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                        </li>
                                    </ul>
                                </td>

                                <td>
                                    @{
                                        if (item.HeadingStatus == true)
                                        {
                                            status = "Aktif";
                                            stcolor = "badge badge-success";
                                        }

                                        else
                                        {
                                            status = "Pasif";
                                            stcolor = "badge badge-danger";
                                        }
                                    }
                                    <span class="@stcolor">@status</span>
                                </td>

                                <td class="project-state">
                                    <span class="@color" style="@style">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>

                                    @{
                                        if (item.HeadingStatus == false)
                                        {
                                            <a class="btn btn-success btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                                <i class="fa fa-check"></i> Aktif Yap
                                            </a>
                                        }

                                        else
                                        {
                                            <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                                <i class="fa fa-ban"></i>
                                                Pasif Yap
                                            </a>
                                        }
                                    }

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>

<a href="/Heading/AddHeading/" class="btn btn-primary">Yeni Başlık</a>